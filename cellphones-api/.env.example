# ==========================================================
# ✅ APP CONFIGURATION
# ==========================================================
APP_NAME=Cellphones
APP_ENV=production
APP_KEY=        # ⚡ Nhớ chạy php artisan key:generate để tự tạo key
APP_DEBUG=false
APP_URL=https://cellphones-api.onrender.com
APP_FRONTEND_URL=https://cellphone-two.vercel.app
APP_TIMEZONE=Asia/Ho_Chi_Minh

# ==========================================================
# ✅ LOGGING
# ==========================================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ==========================================================
# ✅ DATABASE (Render dùng SQLite để không cần setup server)
# ==========================================================
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite
DB_FOREIGN_KEYS=true

# ==========================================================
# ✅ CACHE & SESSION
# ==========================================================
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ⚡ DOMAIN của FE chính xác — KHÔNG dùng .vercel.app (gây lỗi cookie)
SESSION_DOMAIN=cellphone-two.vercel.app

# Cookie path & security
SESSION_PATH=/
SESSION_SECURE_COOKIE=true
QUEUE_CONNECTION=sync
FILESYSTEM_DISK=local

# ==========================================================
# ✅ MAIL (disabled trong production)
# ==========================================================
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@cellphones.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================================
# ✅ SANCTUM / CORS CONFIGURATION
# ==========================================================
# FE domain (Vercel)
SANCTUM_STATEFUL_DOMAINS=cellphone-two.vercel.app
SESSION_STATEFUL_DOMAINS=cellphone-two.vercel.app

# Cho phép origin từ Vercel
CORS_ALLOWED_ORIGINS=https://cellphone-two.vercel.app

# ==========================================================
# ✅ PAYMENT CONFIG (VNPay)
# ==========================================================
VNPAY_TMN_CODE=VNPAYTEST
VNPAY_HASH_SECRET=SECRETKEY
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=${APP_URL}/api/v1/payment/vnpay/return
VNPAY_IPN_URL=${APP_URL}/api/v1/payment/vnpay/ipn

# ==========================================================
# ✅ STRIPE (nếu dùng)
# ==========================================================
STRIPE_KEY=pk_test_12345
STRIPE_SECRET=sk_test_12345
STRIPE_WEBHOOK_SECRET=

# ==========================================================
# ✅ RENDER PORT (Render auto map cổng này)
# ==========================================================
PORT=10000
