# ==========================================================
# ✅ APP CONFIGURATION
# ==========================================================
APP_NAME=Cellphones
APP_ENV=production
APP_KEY=   # ⚡ Sau khi deploy: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://cellphones-api.onrender.com
APP_FRONTEND_URL=https://cellphone-two.vercel.app
APP_TIMEZONE=Asia/Ho_Chi_Minh

# ==========================================================
# ✅ DATABASE
# ==========================================================
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite
DB_FOREIGN_KEYS=true

# ==========================================================
# ✅ SESSION & COOKIE
# ==========================================================
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=.vercel.app
SESSION_PATH=/
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=None

QUEUE_CONNECTION=sync
FILESYSTEM_DISK=local

# ==========================================================
# ✅ SANCTUM / CORS CONFIGURATION
# ==========================================================
# ⚡ Bao gồm luôn cả localhost để test local
SANCTUM_STATEFUL_DOMAINS=cellphone-two.vercel.app,localhost,127.0.0.1
SESSION_STATEFUL_DOMAINS=cellphone-two.vercel.app,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://cellphone-two.vercel.app,http://localhost:5173,http://127.0.0.1:5173

# ==========================================================
# ✅ MAIL
# ==========================================================
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@cellphones.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================================
# ✅ PAYMENT
# ==========================================================
VNPAY_TMN_CODE=VNPAYTEST
VNPAY_HASH_SECRET=SECRETKEY
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=${APP_URL}/api/v1/payment/vnpay/return
VNPAY_IPN_URL=${APP_URL}/api/v1/payment/vnpay/ipn

# ==========================================================
# ✅ STRIPE
# ==========================================================
STRIPE_KEY=pk_test_12345
STRIPE_SECRET=sk_test_12345

# ==========================================================
# ✅ RENDER PORT
# ==========================================================
PORT=10000
